FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      fvSolution;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

solvers
{
    p
    {
        solver           GAMG;
        tolerance        1e-6;
        relTol           0.001;

        smoother         DICGaussSeidel;

        cacheAgglomeration true;
        nCellsInCoarsestLevel 500; //set to a larger number for large meshes (fine I think)
        agglomerator     faceAreaPair;
        mergeLevels      1;
    }

    pFinal
    {
        $p;
        relTol          0;
    }

    U //"(U|k|epsilon)"
    {
        solver          smoothSolver; //PBiCG;
        			      //preconditioner  diagonal;
        smoother        symGaussSeidel;
        tolerance       1e-7;
        relTol          0;
    }

    UFinal //"(U|k|epsilon)Final"
    {
        $U;
        relTol          0;
    }
}

PIMPLE
{
    nNonOrthogonalCorrectors 1;
    nCorrectors         2;
    nOuterCorrectors    200;
    pRefCell		0;
    pRefValue		0;

    residualControl
    {
        U
        {
            tolerance   1e-4;
            relTol      0;
        }
        p
        {
            tolerance   1e-3;
            relTol      0;
        }
    }
}

relaxationFactors
{
    fields
    {
        p       0.3;
        pFinal  1;
    }
    equations
    {
        U           0.9;
	UFinal	    1;
    }
}


